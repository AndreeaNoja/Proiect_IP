@model IEnumerable<ClinicaMedicalaV20.Models.Alerte>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">ALERTE</h1>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            
                            <p class="card-text"><strong>ID-ul Pacientului:</strong> @Html.DisplayFor(modelItem => item.IDPacient)</p>
                            <p class="card-text"><strong>Alarma:</strong> @Html.DisplayFor(modelItem => item.Alarma)</p>
                            <p class="card-text"><strong>Avertisment:</strong> @Html.DisplayFor(modelItem => item.Avertisment)</p>
                            <p class="card-text"><strong>Frecventa Cardiaca Max:</strong> @Html.DisplayFor(modelItem => item.FrecventaCardiacaMax)</p>
                            <p class="card-text"><strong>Umiditate Max:</strong> @Html.DisplayFor(modelItem => item.UmiditateMax)</p>
                            <p class="card-text"><strong>TemperaturaMax:</strong> @Html.DisplayFor(modelItem => item.TemperaturaMax)</p>
                            <p class="card-text"><strong>ECK Max:</strong> @Html.DisplayFor(modelItem => item.ECKMax)</p>
                            <div class="d-flex justify-content-around">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No alerts found.
        </div>
    }
</div>

