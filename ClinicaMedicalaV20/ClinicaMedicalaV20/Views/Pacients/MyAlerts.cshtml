@model IEnumerable<ClinicaMedicalaV20.Models.Alerte>

@{
    ViewBag.Title = "My Alerts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-5">My Alerts</h2>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-lg rounded">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Alarma</th>
                                <th scope="col">Avertisment</th>
                                <th scope="col">FrecventaCardiacaMax</th>
                                <th scope="col">UmiditateMax</th>
                                <th scope="col">Temperatura</th>
                                <th scope="col">ECKMax</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alerta in Model)
                            {
                                <tr>
                                    <td>@alerta.Alarma</td>
                                    <td>@alerta.Avertisment</td>
                                    <td>@alerta.FrecventaCardiacaMax</td>
                                    <td>@alerta.UmiditateMax</td>
                                    <td>@alerta.TemperaturaMax</td>
                                    <td>@alerta.ECKMax</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            No alerts found for this patient.
        </div>
    }
</div>
