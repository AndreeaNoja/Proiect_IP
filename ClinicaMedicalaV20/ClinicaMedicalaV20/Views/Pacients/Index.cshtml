@model IEnumerable<ClinicaMedicalaV20.Models.Pacient>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Pacienți</h1>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nume) @Html.DisplayFor(modelItem => item.Prenume)</h5>
                            <p class="card-text"><strong>Vârstă:</strong> @Html.DisplayFor(modelItem => item.Varsta)</p>
                            <div class="d-flex justify-content-around">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                <a asp-action="ECGGraphs" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Grafic</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No patients found.
        </div>
    }
</div>
