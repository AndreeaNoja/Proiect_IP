@model IEnumerable<ClinicaMedicalaV20.Models.Date_medicale>

@{
    ViewBag.Title = "Date Medicale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Date Medicale</h2>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Istoric Medical</th>
                            <th>Alergii</th>
                            <th>Consultații Cardiologice</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var date in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => date.IstoricMedical)</td>
                                <td>@Html.DisplayFor(modelItem => date.Alergii)</td>
                                <td>@Html.DisplayFor(modelItem => date.ConsultatiiCardiologice)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No medical data found for this patient.
        </div>
    }
</div>
