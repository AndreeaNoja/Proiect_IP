@model IEnumerable<ClinicaMedicalaV20.Models.Recomandari>

@{
    ViewBag.Title = "My Recommendations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">My Recommendations</h2>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Tipul Recomandarii</th>
                            <th>Durata Zilnica</th>
                            <th>Alte Indicatii</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TipulRecomandarii)</td>
                                <td>@Html.DisplayFor(modelItem => item.Data_Inceput)</td>
                                <td>@Html.DisplayFor(modelItem => item.Data_Final)</td>
                                <td>@Html.DisplayFor(modelItem => item.AlteIndicatii)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No recommendations found for this patient.
        </div>
    }
</div>
