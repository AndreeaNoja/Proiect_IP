@model IEnumerable<ClinicaMedicalaV20.Models.Medic>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">Medici</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-center text-uppercase text-info">
                                @Html.DisplayFor(modelItem => item.Nume) @Html.DisplayFor(modelItem => item.Prenume)
                            </h5>
                            <p class="card-text">
                                <strong>ID Medic:</strong> @Html.DisplayFor(modelItem => item.ID_Medic)
                            </p>
                            <p class="card-text">
                                <strong>Parola:</strong> @Html.DisplayFor(modelItem => item.Parola)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-around">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No doctors found.
        </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
